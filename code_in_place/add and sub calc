#include<stdio.h>
int main()
{
    int a,b,result;
    char operator;
    
    printf("Enter the first operand : ");
    scanf("%d",&a);
    
     printf("Enter the second operand : ");
    scanf("%d",&b);
    
    printf("Enter the operation that you want to perform i.e addition or subtraction : ");
    scanf(" %c",&operator);
    
    result=(operator =='+')?(a+b):(a-b);
    
    printf("%d %c %d = %d",a,operator,b,result);
     
     
     getchar();
     getchar();
     return 0;
     
}   
