    //    This program checks the type of trianlge  based on its side

#include <stdio.h>
int main()
{
    //declaring the sides of a triangle
    int a,b,c;
    
    //inputting values of the sides from user
    
    printf("\nEnter the first side of a trianlge : ");
    scanf("%d",&a);
    
    
    printf("\nEnter the second side of a trianlge : ");
    scanf("%d",&b);
    
    
    printf("\nEnter the third side of a trianlge : ");
    scanf("%d",&c);
    
    if((a+b)>c || (a+c)>b || (b+c)>a) //checks if sum of two sides is greater than the third side or not
    {
               if(a==b==c)//check whether all sides are equal or not
               {
                          printf("\nThe trianlge is an equilateral tiangle.");
               }
               else if(a==b || a==c || b==c)//check whether any two sides are equal or not
               {
                         printf("\nThe trianlge is an isosceles trianlge.");
               }
               else      //executes if none of the sides are equal
               {
                   printf("\nThe triangle is a scalene triangle.");
               }
               
    }
    
    else
    {
        printf("Your entered values are invalid to form a trianlge.");
    }
    
    
    getchar();
    getchar(); 
    
    
}                 
